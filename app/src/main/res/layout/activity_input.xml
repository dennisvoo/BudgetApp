<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InputActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:text="Select the month you are budgetting for" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="48dp">

        <Spinner
            android:id="@+id/select_month"
            android:layout_margin="16dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="6dp" />

        <EditText
            android:id="@+id/et_month"
            android:inputType="text"
            android:hint="Enter new month if needed"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Money to Save for the Week:"
        android:layout_gravity="center"
        android:paddingBottom="8dp"/>

    <EditText
        android:id="@+id/et_income"
        android:inputType="numberDecimal"
        android:layout_gravity="center"
        android:layout_width="256dp"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingTop="48dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Amount You Want to Spend:"
        android:layout_gravity="center"
        android:paddingBottom="8dp" />

    <EditText
        android:id="@+id/et_budget"
        android:inputType="numberDecimal"
        android:layout_gravity="center"
        android:layout_width="256dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/submit_budget_button"
        android:layout_marginTop="32dp"
        android:text="Submit Budget Info"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>